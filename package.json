{
  "name": "hedge-trading-bot",
  "version": "1.0.0",
  "main": "index.js",
  "bin": {
    "hedge-bot": "./dist/cli.js"
  },
  "scripts": {
    "start": "ts-node index.ts",
    "build": "tsc",
    "dev": "ts-node-dev index.ts",
    "cli": "ts-node cli.ts",
    "build:cli": "tsc && chmod +x dist/cli.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "migrate": "ts-node src/utils/migrate.ts",
    "generate:key": "node -e \"const crypto = require('crypto'); console.log('ENCRYPTION_KEY=' + crypto.randomBytes(32).toString('hex'));\""
  },
  "dependencies": {
    "@grammyjs/conversations": "^1.2.0",
    "@orca-so/tx-sender": "^1.0.0",
    "@orca-so/whirlpools": "^1.1.0",
    "@prisma/client": "^6.1.0",
    "@raydium-io/raydium-sdk": "^1.3.1-beta.0",
    "@solana/kit": "^2.1.0",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.98.0",
    "base64url": "^3.0.1",
    "bip39": "^3.1.0",
    "bn.js": "^5.2.1",
    "bs58": "^6.0.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "config": "^3.3.12",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "ed25519-hd-key": "^1.3.0",
    "express": "^4.22.1",
    "grammy": "^1.34.0",
    "inquirer": "^13.0.1",
    "openai": "^4.80.1",
    "ora": "^9.0.0",
    "prisma": "^6.1.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bip39": "^2.4.2",
    "@types/bn.js": "^5.1.6",
    "@types/config": "^3.3.5",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.15",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.17.11",
    "@types/ws": "^8.18.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
